<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_below="@id/tv_hw_text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"/>
    <LinearLayout
        android:id="@+id/ll_lang_kz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_flag_kazakhstan"/>
        <TextView
            android:id="@+id/tv_lang_kz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Қазақ тілі"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>
    <View
        android:layout_below="@id/tv_hw_text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>
    <LinearLayout
        android:id="@+id/ll_lang_ru"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_flag_russia"/>
        <TextView
            android:id="@+id/tv_lang_ru"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Русский язык"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>
    <View
        android:layout_below="@id/tv_hw_text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"/>
</LinearLayout>