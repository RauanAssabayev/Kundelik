<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/MySwitch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="kz.edu.sdu.rauanassabayev.kundelik.Fragments.AddHWFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_subject_name"
        android:paddingTop="10dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorAccent"
        android:text="@string/subject_history_of_kazakhstan" />
        <LinearLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="7dp"
                android:background="@drawable/bg_bottom_border_gray"
                android:src="@drawable/ic_calendar_day"/>
            <Switch
                android:id="@+id/stch_day_before"
                android:theme="@style/MySwitch"
                android:background="@drawable/bg_bottom_border_gray"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="19sp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Напомнить за день" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:background="@drawable/bg_bottom_border_gray"
                android:src="@drawable/ic_clock"/>
            <Switch
                android:id="@+id/stch_choose_time"
                android:background="@drawable/bg_bottom_border_gray"
                android:theme="@style/MySwitch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="19sp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Выбрать время" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_stc_hw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f6f6f6"
            android:text="Домашняя работа"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="#858585"
            android:textSize="18sp" />
        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/et_hw_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:gravity="start"
                android:hint="Ввидите текст"
                android:imeOptions="actionDone"
                android:padding="10dp" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                app:backgroundTint="@android:color/white"
                android:src="@drawable/ic_add" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>